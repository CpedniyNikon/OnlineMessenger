<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AuthorizationCode.AuthorizationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/Name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/LoginTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/textview_style"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:ems="10"
            android:hint="@string/enterNick"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingStart="6dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hintColor"
            android:textSize="16dp"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/Pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_style"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
            android:ems="10"
            android:hint="@string/enterPassword"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingStart="6dp"
            android:password="true"
            android:textColor="@color/black"
            android:textColorHint="@color/hintColor"
            android:textSize="16dp"
            tools:ignore="Deprecated" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/authrstn"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp"
            android:background="@drawable/circled_button"
            android:fontFamily="@font/inter_regular"
            android:text="@string/authorizationText"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/authorizationLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/authorization_logo" />

        <TextView
            android:id="@+id/authorizationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:text="Don't have an account? Register it!"
            android:textColor="#6F6F6F"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/LoginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/authorizationLogo"
            android:layout_alignStart="@id/Name"
            android:layout_marginTop="-5dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Log In"
            android:textColor="@color/black"
            android:textSize="45sp" />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>